

<div class='container px-5 px-sm-0 mt-3'>
	<div class='row justify-content-center'>
    <div class="col-sm-12 col-md8 col-lg-5 px-sm-0 mx-autp">
          
      <h2>User info</h2>

      <!-- バリデーションエラー検出時 -->
      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <%= f.label :Name %><br />
        <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
        <%= f.label :Image, class: "mt-3" %><br />
        <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %><br />
        <%= f.label :Introduction, class: "mt-3" %><br />
        <%= f.text_area :introduction, class: "form-control" %>
        <%=f.submit 'Update User', class: "btn btn-secondary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
