<div class='container px-5 px-sm-0 mt-3'>
	<div class='row'>

		<!-- 左側user info & new book 部分テンプレート -->
    <%= render 'layouts/userinfo_newbook', user: @user, book: @book %> 

    <!-- 画面右側 Book一覧 -->
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <% if @user == current_user %>
        <table class='table'>
          <tbody>
            <tr>
              <!-- userのshowリンク -->
              <td><%= link_to user_path(@books.user_id) do %>
                <%= image_tag @books.user.get_profile_image(100,100) %><br>
                <%= @books.user.name %>
              <% end %></td>
              <!-- booksのshowリンク -->
              <td><%= link_to "#{@books.title}", book_path(@books.id) %></td>
              <td><%= @books.body %></td>
              <!-- 編集リンク -->
              <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %> </td>
              <!-- 削除ボタン -->
              <td><%= link_to "Destroy", book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?" %></td>
            </tr>
          </tbody>
        </table>
      <% else %>
        <table class='table'>
          <tbody>
              <tr>
                <!-- userのshowリンク -->
                <td><%= link_to user_path(@books.user_id) do %>
                  <%= image_tag @books.user.get_profile_image(100,100) %><br>
                  <%= @books.user.name %>
                <% end %></td>
                <!-- booksのshowリンク -->
                <td><%= link_to "#{@books.title}", book_path(@books.id) %></td>
                <td><%= @books.body %></td>
              </tr>
          </tbody>
        </table>
      <% end %>
    </div>


  </div>
</div>