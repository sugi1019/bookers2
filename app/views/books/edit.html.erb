<div class='container px-5 px-sm-0 mt-3'>
	<div class='row justify-content-center'>
    <div class="col-sm-12 col-md8 col-lg-5 px-sm-0 mx-autp">
    <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <%= f.label :title %><br />
        <%= f.text_field :title, class: "form-control ", autofocus: true, autocomplete: "title" %>
        <%= f.label :Opinion %><br />
        <%= f.text_area :body, class: "form-control", autofocus: true, autocomplete: "body" %>
        <%=f.submit 'Create Book', class: "btn btn-success mt-3" %>
      <% end %>
      <div class="mt-3">
        <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</div>
