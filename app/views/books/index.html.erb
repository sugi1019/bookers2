<div class='container px-5 px-sm-0'>
	<div class='row'>

  <%= render 'layouts/userinfo_newbook', user: @user, book: @book %> 

  		<!-- 画面右側 Book一覧 -->
	  <div class='col-md-8 offset-md-1'>
	    <h2>Books</h2>
	    <!-- 投稿した書籍一覧表示を作成しましょう。 -->
	    <table class='table table-hover table-inverse'>
	      <thead>
	        <tr>
	          <th></th>
	          <th>Title</th>
	          <th>Opinion</th>
	          <th colspan="3"></th>
	        </tr>
	      </thead>
	      <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(80,80) %></td>
              <td><%= link_to "#{book.title}", book_path(book.user_id) %></td><!-- booksのshowリンク -->
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
	    </table>
	  </div>


  </div>
</div>